<div class="container">
  <div class="row center signup-form">
    <div class="col s12 m12 l12">
      <div class="card-panel">
      <h3 class="header">Login</h3>
        <div class="row">
          <%= form_for(:login, html: { class: 'col s12' }) do |f| %>
            <div class="row">
              <div class="input-field col s12">
                <%= f.email_field :email, placeholder: 'Enter your email', autofocus: true %>
                  <%= f.label :email %>
              </div>
            </div>
             <div class="row">
              <div class="input-field col s12">
                  <%= f.password_field :password, placeholder: 'Enter a password', autofocus: true %>
                  <%= f.label :password, class: 'active' %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.button 'login', class: 'btn orange waves-effect waves-light'%>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>